      {
        "id": "33ed6030-135b-45f1-b8a2-6801cb9283fb",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
