      {
        "id": "7f991301-ec54-45f1-8602-141290c983aa",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
