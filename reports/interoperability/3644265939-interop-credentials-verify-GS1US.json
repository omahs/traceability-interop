      {
        "id": "affd73df-3499-46e1-92aa-ef332ffe4adf",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
