      {
        "id": "24a20a3d-1007-4b7c-b06c-82d510513da9",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
