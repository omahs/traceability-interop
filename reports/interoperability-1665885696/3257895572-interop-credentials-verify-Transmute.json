      {
        "id": "b7ee0a97-86fe-4d3d-a26f-1fc24ab73bb4",
        "name": "Verify Credential",
        "request": {
          "url": {
            "path": [
              "credentials",
              "verify"
            ],
            "host": [
              "{{API_BASE_URL}}"
